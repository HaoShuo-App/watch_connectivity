<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.rexios.watch_connectivity">

    <queries>
        <package android:name="com.google.android.wearable.app" />
        <package android:name="com.samsung.android.app.watchmanager" />
    </queries>

    <application>
        <service
            android:name=".WatchConnectivityPlugin"
            android:exported="true">
            <intent-filter>
                <!-- listeners receive events that match the action and data filters -->
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/watch_connectivity"
                    android:scheme="wear" />
            </intent-filter>
        </service>
    </application>
</manifest>
